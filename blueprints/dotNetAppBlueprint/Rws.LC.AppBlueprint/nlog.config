<?xml version="1.0" encoding="utf-8"?>
<nlog throwExceptions="true" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <targets async="true">
    <target name="logFile" xsi:type="File" fileName="${basedir}\logs\app-blueprint.log" archiveAboveSize="100000000" maxArchiveFiles="999" keepFileOpen="true" openFileCacheTimeout="30" concurrentWrites="false" layout="${date:format=yyyy-MM-dd HH\:mm\:ss,fff} ${level:uppercase=true} [${threadId}] [${TR_ID}] [app.blueprint] [null] logcategory [null] ${when:when=length('${exception:format=message}') &gt; 0 :inner=${literal:text=EX\:}${exception:format=message,Data:maxInnerExceptionLevel=10}|}${replace-newlines:replacement=\\n:${message}} ${replace-newlines:replacement=\\n:${exception:format=toString}}" />
    <!--Logs format definition-->
    <target name="coloredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false" layout="${date:format=yyyy-MM-dd HH\:mm\:ss,fff} ${level:uppercase=true} [${threadId}] [${TR_ID}] [app.blueprint] [null] logcategory [null] ${when:when=length('${exception:format=message}') &gt; 0 :inner=${literal:text=EX\:}${exception:format=message,Data:maxInnerExceptionLevel=10}|}${replace-newlines:replacement=\\n:${message}} ${replace-newlines:replacement=\\n:${exception:format=toString}}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>
  <rules>
    <logger minLevel="${when:when='${environment:LOG_LEVEL}' != '':inner=${environment:LOG_LEVEL}:else=Info}" writeTo="coloredConsole" />
    <!--uncomment only for local debugging-->
    <!--<logger minLevel="Debug" writeTo="logFile" />-->
  </rules>
</nlog>